generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserPref {
  id          String   @id @default(cuid())
  userId      String   @unique
  dietFlags   Json
  pantry      Json?
  budgetMax   Int?
  timeMaxMin  Int?
}

model Dish {
  id            String  @id @default(cuid())
  name          String  @unique
  category      String
  cuisine       String?
  tags          Json
  baseIngredients Json
  kcal          Int?
  protein_g     Int?
  time_min      Int?
  price_cents   Int?
  healthScore   Float?
}

model Spin {
  id          String   @id @default(cuid())
  userId      String?
  categories  Json
  locked      Json
  powerUps    Json
  constraints Json
  result      Json
  seed        String
  createdAt   DateTime @default(now())
}

model PartySession {
  id         String   @id @default(cuid())
  code       String   @unique
  hostUserId String?
  state      Json
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  members    PartyMember[]
}

model PartyMember {
  id         String   @id @default(cuid())
  sessionId  String
  userId     String?
  nickname   String
  constraints Json
  joinedAt   DateTime @default(now())
  session    PartySession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}
